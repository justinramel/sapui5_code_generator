<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	controllerName="{{namespace}}.blocks.{{lowerCase name}}.{{name}}">
	<l:VerticalLayout
		width="100%">
		<f:SimpleForm
			editable="false"
			maxContainerCols="1"
			labelSpanL="4"
			labelSpanM="4"
			layout="ResponsiveGridLayout">
			<f:content>
				<Label text="{i18n>{{upperCase name}}_NAME}"/>
				<Text text="{/name}"/>

				<Label text=""/>
				<Link text="Edit" press="onEditPress" />
			</f:content>
		</f:SimpleForm>
	</l:VerticalLayout>
</mvc:View>